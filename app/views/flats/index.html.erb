

<div class="container mt-3">
  <div class="header">
    <h1>Flats</h1>
  </div>
  <div class="row">

    <% @flats.each do |flat| %>
      <div class="col-4">
        <div class="flat-card">
          <img class="flat-card-image" src=<%= flat.URL %>/>
          <div class="card-info">
            <div class="flex">
                <h3><%= flat.name %></h3>
                <p><%= flat.address %></p>
                <div class="card-info-details">
                  <i class="fas fa-user-friends"></i>
                  <p><%= flat.capacity %></p>
                  <i class="fas fa-euro-sign"></i>
                  <p><%= flat.price %></p>
                </div>
            </div>
          </div>
          <div class="flat-card-links">
            <span><%= link_to "🚀Add", new_flat_path %> |
              <%= link_to "💀Remove", new_flat_path %> |
              <%= link_to "👨‍🎨Edit", new_flat_path %>
            </span>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>

